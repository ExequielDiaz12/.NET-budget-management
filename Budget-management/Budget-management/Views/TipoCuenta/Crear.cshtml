@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1> Crear Tipo cuenta</h1>
<h5>Aquí podrás crear tus tipos de cuenta para agruparlas</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TipoCuenta" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre">Nombre: </label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
